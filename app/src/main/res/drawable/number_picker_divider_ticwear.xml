        <shape android:tint="?android:colorControlActivated" android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>
    <item>
        <shape android:tint="?android:colorControlNormal" android:shape="rectangle">
            <solid android:color="@android:color/black" />
        </shape>
    </item>
</animated-selector>